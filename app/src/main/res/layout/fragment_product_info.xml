<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_light"
    tools:context=".ui.module.xmlview.products.view.ProductInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_primary_variant"
        android:id="@+id/offline_ribbion"
        android:paddingVertical="@dimen/_4sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/offline_ribbion_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:fontFamily="@font/roboto_regular"
            android:layout_centerHorizontal="true"
            android:text="@string/offline"
            android:textColor="@color/white"
            android:textSize="@dimen/_9ssp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/offline_ribbion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"/>

        <TextView
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:id="@+id/heading"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Heading"
            android:maxLines="1"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/sub_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:text="Sub heading will go here."
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>



</RelativeLayout>